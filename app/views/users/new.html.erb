    <br><br>
    <%= form.label :email, "Email: "%>
    <%= form.text_field :email , placeholder: "Example@email.com"%>
    <br><br>
    <%= form.label :password, "Password: "%>
    <%= form.password_field :password%>
    <br><br>
    <%= form.submit "Create" %>
<% end%>


